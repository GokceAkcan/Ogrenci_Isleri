<table border="1" style="border: inherit;" bgcolor="#f5f5dc">
  <caption><em>Vize Sonuçları</em></caption>
  <tr>
    <td>Öğrenci Numarası</td>
    <td>Ad</td>
    <td>Soyad</td>
    <td>Vize Notu</td>
    <td>Harf ile</td>
  </tr>
  <% @ogrenciler.each do |ogrenci| %>
      <tr>
        <td><%= ogrenci[:numara] %></td>
        <td><%= ogrenci[:ad] %></td>
        <td><%= ogrenci[:soyad] %></td>
        <td><%= ogrenci[:vize] %></td>
        <td><%= ogrenci[:harf] %></td>
      </tr>
  <% end %>
</table>